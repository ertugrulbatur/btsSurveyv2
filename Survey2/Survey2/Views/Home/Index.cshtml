@{
    ViewData["Title"] = "Home Page";
}


@if (User.Identity.IsAuthenticated)
{
    <span>@User.Identity.Name</span>
    <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">
        Logout
    </a>
}

else{ 
    <a asp-action="Login" asp-controller="Account" class="btn btn-success">Login</a>
    <a asp-action="Register" asp-controller="Account" class="btn btn-success">Register</a>
}