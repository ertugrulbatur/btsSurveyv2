@model IEnumerable<Survey2.Models.Annoucement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BTS</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Duyurular
            </th>
            <th>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.Id)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Düzenle</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Detay</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>

</table>
