@model RegisterModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-12">
    <div class="bg-primary text-white col-lg-pull-1 m-1">
        <h2>Create User</h2>

    </div>

    <form class="m-1 p-1" asp-action="Create" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">İsim</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifre</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <label asp-for="Name">Departman</label>
        <select class="form-control" id="typeSelector" asp-for="Department">
            <option value="HumanResources">İnsan Kaynakları</option>
            <option value="Administration">Yönetim</option>
            <option value="3D">Modelleme</option>
            <option value="R&D">Ar&Ge</option>
            <option value="Test">Test</option>
        </select>


        <input type="submit" class="btn btn-primary" value="Kullanıcı Oluştur" />
        <a asp-action="Index" class="btn btn-danger">Geri Dön</a>


    </form>






</div>

