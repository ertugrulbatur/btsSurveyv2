@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="container col-md-12">
    <div class="bg-primary text-white col-lg-pull-1 m-1">
        <h2 style="background-color:darkred;">User List</h2>

    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-bordered table-striped m-1 p-1">
        <tr>
            <th>User Id</th>
            <th>User Name</th>

        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    No Users
                </td>
            </tr>

        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    @*<td>@user.Id</td>*@
                    <td>@user.UserName</td>
                    @* <td>@user.PasswordHash</td>*@
                    <td>
                        <form asp-route-id="@user.Id" asp-action="Delete" method="post">
                            <button type="submit" value="Delete" class="btn btn-danger">Sil</button>
                            <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-primary">Güncelle</a>
                        </form>
                    </td>
                </tr>

            }


        }
    </table>

    <a asp-action="Create" class="btn btn-primary">Create User</a>

</div>
<script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
<script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/adminlte/js/jquery.slimscroll.min.js"></script>
<script src="~/lib/plugins/bootstrap-toggle/bootstrap-toggle.min.js"></script>
<script src="~/lib/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.js"></script>
<script src="~/lib/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.tr.js"></script>
<script src="~/lib/adminlte/js/fastclick.js"></script>
<script src="~/lib/adminlte/js/adminlte.min.js"></script>
<script src="~/lib/plugins/select2/js/select2.full.min.js"></script>



<script type="text/javascript">




    $(document).ready(function () {


        $('.sidebar-menu').tree();


        $('[data-toggle="popover"]').popover()




        $('.form_datetime').datetimepicker({
            language: 'tr',
            format: 'dd-mm-yyyy hh:ii',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 1
        });

        $('.form_date').datetimepicker({
            language: 'tr',
            format: 'dd-mm-yyyy',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        $('.form_time').datetimepicker({
            language: 'tr',
            format: 'hh:ii',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 1,
            minView: 0,
            maxView: 1,
            forceParse: 0
        });

    })
</script>
