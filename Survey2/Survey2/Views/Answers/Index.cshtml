@model IEnumerable<Survey2.Models.Survey>
@{ if (this.User.IsInRole("Admin") || !this.User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2 style="background-color:#367fa9;color:white;">Anketler</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    <a asp-action="GetAnswers" asp-route-id="@item.Id" class="btn btn-warning">Anketi Çöz</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
<script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/adminlte/js/jquery.slimscroll.min.js"></script>
<script src="~/lib/plugins/bootstrap-toggle/bootstrap-toggle.min.js"></script>
<script src="~/lib/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.js"></script>
<script src="~/lib/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.tr.js"></script>
<script src="~/lib/adminlte/js/fastclick.js"></script>
<script src="~/lib/adminlte/js/adminlte.min.js"></script>
<script src="~/lib/plugins/select2/js/select2.full.min.js"></script>



<script type="text/javascript">




    $(document).ready(function () {


        $('.sidebar-menu').tree();


        $('[data-toggle="popover"]').popover()




        $('.form_datetime').datetimepicker({
            language: 'tr',
            format: 'dd-mm-yyyy hh:ii',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 1
        });

        $('.form_date').datetimepicker({
            language: 'tr',
            format: 'dd-mm-yyyy',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        $('.form_time').datetimepicker({
            language: 'tr',
            format: 'hh:ii',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 1,
            minView: 0,
            maxView: 1,
            forceParse: 0
        });

    })
</script>