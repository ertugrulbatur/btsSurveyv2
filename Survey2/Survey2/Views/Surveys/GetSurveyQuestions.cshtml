@model SurveyViewModel
@{
    ViewData["Title"] = "GetSurveyQuestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-12">
    <h2>QuestionChoice</h2>

    <table class="table table-bordered table-striped m-1 p-1">
        <tr>
            <th>Question</th>
            <th>Choice</th>

        </tr>
        @if (Model.Question.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    No Questions
                </td>
            </tr>
        }
        else
        {
            <tr>
                @foreach (var question in Model.Question)
                {
                    ///Questionları bastır

                    <td>@question.Text</td>



                }
                @foreach (var choice in Model.Choice)
                {
                    <td>@choice.Text</td>
                    ///Choiceleri bastır
                }
            </tr>
        }



    </table>


</div>

