</table>




@section Scripts {
    <script>


        function GetChoice() {
            var ChoiceText = $("#Choice_Text").val();
            var QuestionId = $("#QuestId").val();
            $.ajax({
                url: "@Url.Action("AddChoice", "Surveys")",
                type: "post",
                data: {choicetext: ChoiceText, questionid: QuestionId},
                success: function (data) {
                     $("#ChoicesTBody").append("<tr><td>"+data+"</td></tr>")

                
                }
            });
        }

    </script>
}